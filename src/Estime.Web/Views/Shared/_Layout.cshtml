@using Estime.Web.HtmlHelpers
<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/960gs.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.less")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>

	<script src="@Url.Content("~/Scripts/jquery-1.7.1.js")" type="text/javascript"></script>

</head>
<body>
	<div class="container_4">
		<header>
			<div class="grid_4 header">
				<div class="top-logo">
					<div class="user-info">
						@Html.Partial("_LogOnPartial")
					</div>
				</div>
			</div>
		</header>
		
		<nav>
			<div class="grid_4 nav">
				<ul class="menu">
					<li class="special">@Html.MenuLink("Registrer opgave", "Index", "Home")</li>
					<li>@Html.MenuLink("Åbne opgaver", "Opened", "Task")</li>
					<li>@Html.MenuLink("Lukkede opgaver", "Closed", "Task")</li>
				</ul>
			</div>
		</nav>
	
		<section id="main">
			<div class="grid_4 new-task">
				<div style="margin: 10px;">
					@RenderBody()
				</div>
			</div>
		</section>

		<footer>
			<div class="container_4">
				<div class="grid_4 footer">
					ExatoSolutions ApS  |  Mileparken 28  |  DK-2730 Herlev  |  Telefon: +45 70 27 66 55  |  E-mail: info@exatosolutions.dk
				</div>
			</div>
		</footer>
	</div>
	
		@*@RenderSection("AdditionalScripts")*@
		
</body>
</html>
