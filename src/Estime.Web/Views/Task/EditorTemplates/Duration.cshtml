<script type="text/javascript">

	(function($) {

		function totalMonths() {

			var h = parseInt($('#@ViewData.TemplateInfo.GetFullHtmlFieldId("hours")').val(), 10);
			var m = parseInt($('#@ViewData.TemplateInfo.GetFullHtmlFieldId("minutes")').val(), 10);
			$('#@ViewData.TemplateInfo.GetFullHtmlFieldId("")').val(h + m);
		}

		$(function() {

			$('#@ViewData.TemplateInfo.GetFullHtmlFieldId("hours")').change(totalMonths).val(@(Model!=0 ? Model / 60 * 60 : 0));
			$('#@ViewData.TemplateInfo.GetFullHtmlFieldId("minutes")').change(totalMonths).val(@(Model!=0 ? Model % 60 : 0));

		});

	})(jQuery);

</script>

